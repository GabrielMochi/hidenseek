{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck" : true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "~/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    ".nuxt",
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}
